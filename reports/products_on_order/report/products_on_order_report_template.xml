<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="prod_on_order_temp">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Products On Order</h4>
                            </b>
                        </center>
                    </div>
                    <br/>
                    <div>
                        <table class="table table-condensed" style="border: 1px solid black;">
                            <thead style="display: table-header-group;">
                                <tr>
                                    <th style="border: 1px solid black;text-align: center; width:9%;">Order #</th>
                                    <th style="border: 1px solid black;text-align: center; width:51%">Customer Name</th>
                                    <th style="border: 1px solid black;text-align: center; white-space: nowrap; width:15%">
                                       Date
                                    </th>
                                    <th style="border: 1px solid black;text-align: center; white-space: nowrap; width:10%">
                                       Due Date
                                    </th>
                                    <th style="border: 1px solid black;text-align: center; white-space: nowrap; width:5%">
                                      Qty Ordered
                                    </th>
                                    <th style="border: 1px solid black;text-align: center; white-space: nowrap; width:5%">
                                      Qty Remaining
                                    </th>
                                    <th style="border: 1px solid black;text-align: center; white-space: nowrap; width:5%">
                                      Total SO Items Remaining
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="data" t-as="order">
                                    <td align="left" style="border: 1px solid black;">
                                        <span t-esc="order.name"/>
                                    </td>
                                    <td align="left" style="border: 1px solid black;">
                                        <span t-esc="order.customer_name"/>
                                    </td>
                                    <td align="left" style="border: 1px solid black;">
                                        <span t-esc="order.confirmation_date"/>
                                    </td>
                                    <td align="left" style="border: 1px solid black;">
                                        <span t-esc="order.validity_date"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="order.qty_ordered"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="order.qty_remaining"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="order.qty_total_remaining"/>
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </page>
            </t>
        </t>
    </template>
</odoo>