<odoo>
  <data>
   <record id="view_products_on_order_popup" model="ir.ui.view">
            <field name="name">Products On Order</field>
            <field name="model">prod_on_order.popup</field>
            <field name="arch" type="xml">
                <form string="Choose your date">
                    <group>
                        <group>
                            <field name="customer_id" />
                            <field name="product_id" />
                        </group>
                        <group>
                            <field name="compute_at_date" widget="radio"/>
                            <field name="start_date" attrs="{'invisible': [('compute_at_date', '=', 0)]}"/>
                            <field name="end_date" attrs="{'invisible': [('compute_at_date', '=', 0)]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="open_table" string="View Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_products_on_order" model="ir.actions.act_window">
            <field name="name">Products On Order</field>
            <field name="res_model">prod_on_order.popup</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_products_on_order_popup"/>
            <field name="target">new</field>
            <field name="context">{'valuation': True}</field>
        </record>


        <record model="ir.ui.view" id="list_view">
              <field name="name">product.on.order.view.list</field>
              <field name="model">sale.order</field>
              <field name="priority">21</field>
              <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Order #"/>
                    <field name="customer_name" string="Customer Name"/>
                    <field name="confirmation_date" string="Date"/>
                    <field name="validity_date" string="Due Date"/>
                    <field name="qty_ordered"/>
                    <field name="qty_remaining"/>
                    <field name="qty_total_remaining"/>
                    <field name="state" invisible="1"/>
                </tree>
              </field>
        </record>
    <menuitem name="Product On Order" id="products_on_order_menu" parent="sale.menu_sale_report"
              action="products_on_order.action_products_on_order"/>
  </data>
</odoo>