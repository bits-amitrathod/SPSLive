<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sales_by_month_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Sales By Month</h4>
                            </b>
                        </center>
                        <center>
                            <h4 t-if="date">
                                Date Range:<span t-esc="date"/>
                            </h4>
                        </center>
                    </div>
                    <br/>
                    <div>
                        <t t-set="total_price" t-value="0"/>
                        <t t-set="total_qty" t-value="0"/>
                        <t t-set="currency" t-value="0"/>
                        <table class="table table-condensed" style="border: 1px solid black;">
                            <thead style="display: table-header-group;">
                                <tr>
                                    <th style="border: 1px solid black;text-align: left; width:15%; ">Product SKU</th>

                                    <th style="border: 1px solid black;text-align: left; width:50%;">Product Name</th>

                                    <th style="border: 1px solid black;text-align: left;white-space: nowrap; width:10%;">
                                       Sales Price
                                    </th>
                                    <th style="border: 1px solid black;text-align: right;white-space: nowrap; width:10%;">
                                       Sales Quantity
                                    </th>
                                    <th style="border: 1px solid black;text-align: right;white-space: nowrap; width:15%;">
                                       Total
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                 <field name="sku_code" string="Product SKU"/>
                    <field name="product_id"/>
                    <field name="product_price" widget="monetary"/>
                    <field name="total_sale_quantity" string="Total Sale Qty"/>
                    <field name="total_amount" widget="monetary" sum="Total"/>
                                <tr t-foreach="data" t-as="product">
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product.sku_code"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product.product_id.name"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product.product_price"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="product.total_sale_quantity"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="product.total_amount"/>
                                        <t t-set="total_qty" t-value="total_qty + product.total_sale_quantity" />
                                        <t t-set="total_price" t-value="total_price +product.total_amount" />
                                    </td>
                                </tr>
                                <tr>

                                    <td colspan="4" align="right" style="border: 1px solid black;">Total</td>
                                    <!--<td align="right" style="border: 1px solid black;">-->
                                        <!--<span t-esc="total_qty"/>-->
                                    <!--</td>-->
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="total_price"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </page>
            </t>
        </t>
    </template>
</odoo>