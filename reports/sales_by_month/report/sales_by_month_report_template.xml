<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sales_by_month_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <div class="oe_structure"/>
                    <div class="row">
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Sales By Month</h4>
                            </b>
                        </center>
                    </div>
                    <br/>
                    <div>
                        <t t-set="total_price" t-value="0"/>
                        <t t-set="total_qty" t-value="0"/>
                        <t t-set="currency" t-value="0"/>
                        <table class="table table-condensed" style="border: 1px solid black;">
                            <thead style="display: table-header-group;">
                                <tr>
                                    <th style="border: 1px solid black;text-align: center; width:15%; ">SKU / Catalog No</th>
                                    <th style="border: 1px solid black;text-align: center; width:75%;">Product Name</th>
                                    <th style="border: 1px solid black;text-align: center;white-space: nowrap; width:10%;">
                                       Price
                                    </th>
                                    <th style="border: 1px solid black;text-align: center;white-space: nowrap; width:10%;">
                                       Quantity
                                    </th>
                                    <th style="border: 1px solid black;text-align: center;white-space: nowrap; width:10%;">
                                       Total
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="data" t-as="product">
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product.sku_name"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product.product_name"/>
                                    </td>
                                    <td style="border: 1px solid black;">
                                        <span t-esc="product.product_price" t-options='{"widget": "monetary","display_currency": product.currency_id}'/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="product.total_sale_qty"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="product.product_price * product.total_sale_qty" t-options='{"widget": "monetary","display_currency": product.currency_id}'/>
                                        <t t-set="total_qty" t-value="total_qty + product.total_sale_qty" />
                                        <t t-set="total_price" t-value="total_price + product.product_price * product.total_sale_qty" />
                                        <t t-set="currency" t-value="product.currency_id " />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black;">
                                    </td>
                                    <td style="border: 1px solid black;">
                                    </td>
                                    <td style="border: 1px solid black;">
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="total_qty"/>
                                    </td>
                                    <td align="right" style="border: 1px solid black;">
                                        <span t-esc="total_price" t-options='{"widget": "monetary","display_currency":currency}' />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </page>
            </t>
        </t>
    </template>
</odoo>