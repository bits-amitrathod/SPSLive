<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="group_by_product">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <page>
                    <style>
                        .noborders {
                        border: 0;
                        }
                    </style>
                    <div class="oe_structure"/>
                    <div class="row">
                        <center>
                            <b>
                                <h2>Surgical Product Solutions</h2>
                                <h4>Gross Sales By Product</h4>
                            </b>
                        </center>

                    </div>
                    <br/>
                    <t t-foreach="data" t-as="product">
                        <b>
                            <span>Product :</span>
                            <span t-esc="product['name']"/>
                        </b>
                        <table class="table table-striped table-condensed">
                            <tr>1
                                <th>#</th>
                                <th>Sales Order</th>
                                <th>Date Order</th>
                                <th>Amount</th>
                            </tr>
                            <t t-set="index" t-value="1"/>
                            <t t-set="totalAmount" t-value="0"/>

                            <tr t-foreach="product['table']" t-as="saleOrder">
                                <t t-set="amount" t-value="float(saleOrder[2])"/>
                                <td t-esc="index"/>
                                <td t-esc="saleOrder[0]"/>
                                <td t-esc="saleOrder[1]"/>
                                <td>$<span t-esc="amount"/></td>
                                <t t-set="index" t-value="index+1"/>
                                <t t-set="totalAmount" t-value="totalAmount+amount"/>
                            </tr>
                            <tr>
                                <td colspan="2" class="noborders"/>
                                <th class="text-right" scope="row">TOTAL</th>
                                <th class="text-right">
                                    $<span t-esc="totalAmount"/>
                                </th>
                            </tr>
                        </table>

                    </t>
                </page>
            </t>
        </t>
    </template>
</odoo>