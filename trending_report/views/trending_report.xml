<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_trending_report_line_tree" model="ir.ui.view">
        <field name="name">product.product.tree</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" string="Trending Report">
                <field name="manufacturer"/>
                <field name="sku_reference"/>
                <field name="product_code"/>
                <field name="product_name" />
                <field name="currency_id"  invisible="1" />
                <field name="qty_in_stock" />
                <field name="product_price"  widget="monetary" />
                <field name="minExDate" />
                <field name="maxExDate"/>
            </tree>
        </field>
    </record>
    <record id="product_normal_action_trending_report" model="ir.actions.act_window">
        <field name="name">Trending Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="domain">[('product_tmpl_id.type', '=', 'product')]</field>
        <field name="search_view_id" eval="False"/>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" eval="False"/>
        <field name="view_id" ref="view_trending_report_line_tree"/>
    </record>

      <!-- Product menu-->
      <menuitem name="Trending Report" id="menu_procurement_partner_contact_trending_report" action="product_normal_action_trending_report"
          parent="stock.menu_warehouse_report" sequence="5"/>
</odoo>